#include <iostream>
#include <cmath>
#include <string>
using namespace std;
signed main() {
    string s;
    getline(cin,s);
    bool word = true;
    for(int i = 0; i < s.length(); i++){
        if(word){
            s[i] = toupper(s[i]);
            word = false;
        } else
            s[i] = tolower(s[i]);
        if(s[i] == ' ')
            word = true;
    }
   for(int i = 0; i < sizeof(s); i++)
        cout << s[i];
return 0;
} //Программа сделана не полностью в связи с трудностями в решении ¯\_(ツ)_/¯
